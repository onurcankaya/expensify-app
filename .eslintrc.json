{
  "extends": ["standard", "prettier"],
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "node",
    "promise",
    "react",
    "react-native",
    "standard",
    "prettier"
  ],
  "rules": {
    "strict": 0,
    "no-useless-escape": 0,
    "no-throw-literal": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "impliedStrict": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "fetch": true,
    "alert": true
  }
}
